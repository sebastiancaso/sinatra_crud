<h1>Edit Account</h1>

<form action="/user/edit" method="POST">
  <input type="hidden" name="_method" value="put">
<div>
  <label for="name">Name: </label>
  <input id="name" type="text" name="user[name]" value="<%= @user.try(:name) %>">
</div>
<div>
  <label for="address">address: </label>
  <input id="address" type="text" name="user[address]" value="<%= @user.try(:address) %>">
</div>
<div>
  <label for="email">Email: </label>
  <input id="email" type="email" name="user[email]" value="<%= @user.try(:email) %>">
</div>
<div>
  <label for="phone_number">phone number: </label>
  <input id="phone_number" type="text" name="user[phone_number]" value="<%= @user.try(:phone_number) %>">
  <input type="submit">
</div>
</form>
